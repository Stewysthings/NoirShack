<h1>The Movies List</h1>

<table>
<% @movies.each do |movie| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(movie.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= movie.title %></dt>
        <dd><%= truncate(strip_tags(movie.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', movie %><br/>
      <%= link_to 'I have watched this movie' %><br/>
      <%= link_to 'Admin - Edit', edit_movie_path(movie) %><br/>
      <%= link_to 'Admin - Destroy', movie, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New movie', new_movie_path %> |
<%= link_to 'Home', welcome_index_path %>

<%= paginate @movies %>
